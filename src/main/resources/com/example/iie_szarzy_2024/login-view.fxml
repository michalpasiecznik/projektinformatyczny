<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" stylesheets="@login.css" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.iie_szarzy_2024.LoginController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <!-- Dodajemy osobną etykietę dla nazwy sklepu -->
    <Label style="-fx-font-size: 36px; -fx-text-fill: #B7B7B7; -fx-padding: 30px;" text="Szary Sklep Spożywczy" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <!-- Reszta elementów logowania -->
    <Label text="Nazwa użytkownika:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Hasło:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button maxWidth="1.7976931348623157E308" onAction="#loginButtonAction" prefHeight="30.0" prefWidth="193.0" text="Zaloguj" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="messageLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <!-- Przyciski do rejestracji i przypomnienia hasła -->
    <Button maxWidth="1.7976931348623157E308" onAction="#registerButtonAction" prefHeight="30.0" prefWidth="67.0" text="Załóż konto" GridPane.rowIndex="4" />
    <Button maxHeight="-Infinity" maxWidth="1.7976931348623157E308" onAction="#remindButtonAction" text="Przypomnij hasło" GridPane.columnIndex="1" GridPane.rowIndex="4" />

</GridPane>
